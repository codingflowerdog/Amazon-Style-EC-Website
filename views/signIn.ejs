<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>HappyMall</title>
    <%include common.ejs%>
    <link rel="stylesheet" href="/css/account.css">
</head>
<body>
    <div class="container">
        <div class="signIn">
            <div class="logo">
                <span>HappyMall</span>
            </div>
            <div class="form border p-3">
                <span>Sign In</span>
                <%if(!session.accountEmail){%>
                <form action="/procSignIn" method="post">
                    <div class="form-group">
                        <label for="email">Email Account</label>
                        <input type="text" class="form-control" id="email" placeholder="Enter Email Address" name="email" required>
                    </div>
                    <button type="submit" class="btn next">Continue</button>
                <%} else {%>
                <form action="/procSignIn" method="post">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter Password" name="password" required>
                    </div>
                    <button type="submit" class="btn next">Sign In</button>
                <% }%>
                </form>
            </div>
            <div class="signUp border-top">
                <button type="submit" class="btn">Sign Up</button>
            </div>
        </div> <!-- card.// -->

    </div>
    <!--container end.//-->
</body>
</html>